<!doctype html>
<html lang="en" data-bs-theme="<%= conf.theme %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="menu.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  </head>
  <body id="body">

    <div id="menu" class="card p-2 m-3 w-50">
      <img id="menuImage" class="rounded" src="img/logo.png" class="card-img-top">
      <div class="card-body">

        <!-- Scenes -->
        <h5 class="card-title text-center">Scenes</h5>
        <ul class="nav nav-tabs nav-fill justify-content-center">
          <% for(var i=0; i < scenes.length; i++) { %>
          <li class="nav-item">
            <button class="nav-link link-secondary" type="button" role="tab" data-bs-toggle="tab"
              id="<%= scenes[i].id %>-tab"
              aria-controls="<%= scenes[i].id %>-tab-pane"
              data-bs-target="#<%= scenes[i].id %>-tab-pane">
              <%=  scenes[i].name %>
            </button>
          </li>
          <% } %>
        </ul>
        <div class="tab-content" id="scenesContent">
          <% for(var i=0; i < scenes.length; i++) { %>
            <div class="tab-pane fade p-2" id="<%= scenes[i].id %>-tab-pane" role="tabpanel" aria-labelledby="<%= scenes[i].id %>-tab" tabindex="0">
                <% for(var j=0; j < scenes[i].scenes.length; j++) { %>
                  <button class="btn btn-outline-secondary btn-sm"
                          onmouseover="setImage('<%= scenes[i].scenes[j].keys %>')"
                          onclick="sendKeyPress('<%= scenes[i].scenes[j].keys %>', '<%= scenes[i].scenes[j].keyMode %>')">
                    <%=  scenes[i].scenes[j].name %>
                  </button>
                <% } %>
                <hr>
            </div>
          <% } %>
        </div>

        <!-- Actions -->
        <h5 class="card-title text-center">Actions</h5>
        <% for(var i=0; i < actions.length; i++) { %>

          <!-- Regular buttons -->
          <% if (actions[i].type == 'button') { %>
            <button class="btn btn-secondary btn-sm"
                    onclick="sendKeyPress('<%= actions[i].keys %>', '<%= actions[i].keyMode %>')">
              <i class="bi bi-<%= actions[i].icon %>"></i>
              <%=  actions[i].name %>
            </button>
          <% } %>

          <!-- Dropdown buttons -->
          <% if (actions[i].type == 'dropdown') { %>
            <div class="btn-group">
              <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-<%= actions[i].icon %>"></i>
                <%=  actions[i].name %>
              </button>
              <ul class="dropdown-menu">
                <% for(var j=0; j < actions[i].options.length; j++) { %>

                  <li>
                    <button class="dropdown-item"
                            type="button"
                            onclick="sendKeyPress('<%= actions[i].options[j].keys %>', '<%= actions[i].options[j].keyMode %>')">
                      <%=  actions[i].options[j].name %>
                    </button>
                  </li>
                <% } %>
              </ul>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>

  
    <script src="menu.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  </body>
</html>

