<!doctype html>
<html lang="en" data-bs-theme="<%= conf.theme %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="menu.css" type="text/css" rel="stylesheet">
    <link href="../node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="../node_modules/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  </head>
  <body id="body" style="display: none;">

    <div id="overlayModal" class="modal fade" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" data-backdrop="false">
        <div class="modal-content">
          <div class="modal-header">
            <ul class="nav justify-content-center nav-underline nav-fill" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link link-secondary" type="button" role="tab" data-bs-toggle="tab"
                id="conf-tab" aria-controls="scenes" data-bs-target="#scenes" aria-selected="true" onclick="hideDefaultContent()">
                  <i class="bi bi-pin-map-fill"></i> Scenes
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link link-secondary" type="button" role="tab" data-bs-toggle="tab"
                id="character-tab" aria-controls="character" data-bs-target="#character" aria-selected="false" onclick="hideDefaultContent()">
                  <i class="bi bi-person-hearts"></i> Character
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link link-secondary" type="button" role="tab" data-bs-toggle="tab"
                id="camera-tab" aria-controls="camera" data-bs-target="#camera" aria-selected="false" onclick="hideDefaultContent()">
                  <i class="bi bi-camera-video"></i> Camera
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link link-secondary" type="button" role="tab" data-bs-toggle="tab"
                id="softengine-tab" aria-controls="softengine" data-bs-target="#softengine" aria-selected="false" onclick="hideDefaultContent()">
                  <i class="bi bi-magic"></i> SoftEngine
                </button>
              </li>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body tab-content">
            <div class="tab-pane fade active show" id="defaultContent" role="tabpanel" tabindex="0">
              <img class="menuImage rounded img-fluid" src="./img/doa-gravure-studio-logo.png" class="card-img-top">
            </div>

            <!-- Scenes -->
            <div class="tab-pane fade" id="scenes" role="tabpanel" aria-labelledby="scenes-tab" tabindex="0">
              <div class="accordion accordion-flush" id="scenesAccordion">
                <% for(var i=0; i < scenes.length; i++) { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"  aria-expanded="false"
                        aria-controls="flush-collapse-<%= scenes[i].id %>" data-bs-target="#flush-collapse-<%= scenes[i].id %>" onclick="toggleAccordion('flush-collapse-<%= scenes[i].id %>')">
                          <%=  scenes[i].name %>
                      </button>
                    </h2>
                    <div id="flush-collapse-<%= scenes[i].id %>" class="accordion-collapse collapse" data-bs-parent="#scenesAccordion">
                      <img class="menuImage rounded img-fluid" src="./img/doa-gravure-studio-logo.png" class="card-img-top">
                      <% for(var j=0; j < scenes[i].scenes.length; j++) { %>
                        <button class="btn btn-outline-secondary btn-sm scene-button"
                            onmouseover="setImage('<%= scenes[i].scenes[j].data %>')"
                            onclick="sendKeypress('<%= scenes[i].scenes[j].data %>', '<%= scenes[i].scenes[j].mode %>')">
                          <%=  scenes[i].scenes[j].name %>
                        </button>
                      <% } %>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>

            <!-- Character -->
            <div class="tab-pane fade" id="character" role="tabpanel" aria-labelledby="character-tab" tabindex="0">
              <div class="btn-group">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" onclick="toggleDropDown(this)">
                  <i class="bi bi-heart-pulse"></i> Breast motion
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('breast-motion-off')">
                      Off
                    </button>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('breast-motion-natural')">
                      Natural
                    </button>
                  </li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('breast-motion-doa')">
                      DOA
                    </button>
                  </li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('breast-motion-omg')">
                      OMG
                    </button>
                  </li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('breast-motion-omgdoa')">
                      OMG+DOA
                    </button>
                  </li>
                </ul>
              </div>
              <div class="btn-group">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" onclick="toggleDropDown(this)">
                  <i class="bi bi-brightness-high"></i> Brightness
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('character-brightness-80')">
                      80%
                    </button>
                  </li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('character-brightness-90')">
                      90%
                    </button>
                  </li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('character-brightness-100')">
                      100%
                    </button>
                  </li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('character-brightness-110')">
                      110%
                    </button>
                  </li>
                  <li>
                    <button class="dropdown-item" type="button" onclick="sendAction('character-brightness-120')">
                      120%
                    </button>
                  </li>
                </ul>
              </div>
              <br>
              <div class="input-group input-group-sm py-2">
                <span class="input-group-text"><i class="bi bi-emoji-sunglasses px-1"></i> Tan level</span>
                <input type="range" class="form-control form-range" oninput="sendRangeValue(this, 'character-tan')">
              </div>
            </div>

            <!-- Camera-->
            <div class="tab-pane fade" id="camera" role="tabpanel" aria-labelledby="camera-tab" tabindex="0">
              <button type="button" class="btn btn-sm btn-secondary" onclick="sendAction('camera-rotate')">
                <i class="bi bi-arrow-clockwise"></i> Toggle landscape/portrait
              </button>
              <button type="button" class="btn btn-sm btn-secondary" onclick="sendAction('screenshot')">
                <i class="bi bi-camera"></i> Screenshot
              </button>
              <br>
              <div class="input-group input-group-sm py-1">
                <span class="input-group-text"><i class="bi bi-zoom-in px-1"></i> Zoom</span>
                <input type="range" class="form-control form-range" oninput="sendRangeValue(this, 'camera-zoom')">
              </div>
              <hr>
              <div class="input-group input-group-sm py-1">
                <span class="input-group-text"><i class="bi bi-arrow-down-up px-1"></i> Vertical pan</span>
                <input type="range" class="form-control form-range" oninput="sendRangeValue(this, 'camera-y-pan')">
              </div>
              <div class="input-group input-group-sm py-1">
                <span class="input-group-text"><i class="bi bi-arrows-vertical px-1"></i> Vertical rotation</span>
                <input type="range" class="form-control form-range" oninput="sendRangeValue(this, 'camera-y-rotation')">
              </div>
              <hr>
              <div class="input-group input-group-sm py-1">
                <span class="input-group-text"><i class="bi bi-arrow-left-right px-1"></i> Horizontal pan</span>
                <input type="range" class="form-control form-range" oninput="sendRangeValue(this, 'camera-x-pan')">
              </div>
              <div class="input-group input-group-sm py-1">
                <span class="input-group-text"><i class="bi bi-arrows px-1"></i> Horizontal rotation</span>
                <input type="range" class="form-control form-range" oninput="sendRangeValue(this, 'camera-x-rotation')">
              </div>
            </div>

            <div class="tab-pane" id="softengine" role="tabpanel" aria-labelledby="softengine-tab" tabindex="0">

              <h6>Physics presets</h6>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="natural-switch" onchange="sendToggle(this, 'softengine-natural-enable', 'softengine-natural-disable')">
                <label class="form-check-label" for="natural-switch">Natural</label>
              </div>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="omg-switch" onchange="sendToggle(this, 'softengine-omg-enable', 'softengine-omg-disable')">
                <label class="form-check-label" for="omg-switch">OMG</label>
              </div>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="doa-switch" onchange="sendToggle(this, 'softengine-doa-enable', 'softengine-doa-enable')">
                <label class="form-check-label" for="doa-switch">DoA</label>
              </div>

              <hr>

              <h6>Body Type</h6>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="a-switch" onchange="sendToggle(this, 'softengine-type-a-enable', 'softengine-type-a-disable')">
                <label class="form-check-label" for="a-switch">A</label>
              </div>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="a-switch" onchange="sendToggle(this, 'softengine-type-b-enable', 'softengine-type-b-disable')">
                <label class="form-check-label" for="a-switch">B</label>
              </div>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="a-switch" onchange="sendToggle(this, 'softengine-type-c-enable', 'softengine-type-c-disable')">
                <label class="form-check-label" for="a-switch">C</label>
              </div>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="a-switch" onchange="sendToggle(this, 'softengine-type-d-enable', 'softengine-type-d-disable')">
                <label class="form-check-label" for="a-switch">D</label>
              </div>
              <div class="form-check form-switch form-check-inline">
                <input class="form-check-input softengine-toggle" type="checkbox" role="switch" id="a-switch" onchange="sendToggle(this, 'softengine-type-e-enable', 'softengine-type-e-disable')">
                <label class="form-check-label" for="a-switch">E</label>
              </div>
            </div>
          </div>

          <div class="modal-footer justify-content-between">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-outline-secondary" onclick="sendAction('character-reload')">
                <i class="bi bi-arrow-repeat"></i>
              </button>

              <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-secondary dropdown-toggle"  data-bs-auto-close="outside" onclick="toggleDropDown(this)">
                  <i class="bi bi-eye-slash"></i>
                </button>
                <ul class="dropdown-menu">
                  <li><button class="dropdown-item" type="button" onclick="sendAction('toggle-hud')">Toggle HUD</button></li>
                  <li><button class="dropdown-item" type="button" onclick="sendAction('toggle-reshade')">Toggle ReShade</button></li>
                </ul>
              </div>
            </div>

            <div class="btn-group" role="group">
              <button type="button" class="btn btn-outline-secondary" onclick="sendAction('play')">
                <i class="bi bi-play"></i>
              </button>
              <button type="button" class="btn btn-outline-secondary" onclick="sendAction('pause')">
                <i class="bi bi-pause"></i>
              </button>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-secondary dropdown-toggle"  data-bs-auto-close="outside" onclick="toggleDropDown(this)">
                  <i class="bi bi-speedometer"></i>
                </button>
                <ul class="dropdown-menu">
                  <li><button class="dropdown-item" type="button" onclick="sendAction('speed-slow')">Slow</button></li>
                  <li><button class="dropdown-item" type="button" onclick="sendAction('speed-normal')">Normal</button></li>
                  <li><button class="dropdown-item" type="button" onclick="sendAction('speed-fast')">Fast</button></li>
                </ul>
              </div>
            </div>

            <div>
              <input type="checkbox" class="btn-check" id="btn-check-outlined" autocomplete="off" onchange="toggleSoftEngine(this)">
              <label class="btn btn-outline-success" for="btn-check-outlined"><i class="bi bi-magic"></i> SoftEngine</label><br>
            </div>
          </div>
        </div>

      </div>
    </div>

    <script src="menu.js"></script>
    <script src="../node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="../node_modules/@popperjs/core/dist/esm/popper.js"></script>
  </body>
</html>

